{
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "baseUrl": "./packages",
        "sourceMap": true,
        "rootDir": ".",
        "paths": {
            "@equinor/eslint-config-fusion": [
                "eslint/src"
            ],
            "@equinor/jest-config-fusion": [
                "eslint/src"
            ],
            "@equinor/fusion-*": [
                "*/src"
            ],
        },
        "jsx": "react-jsx",
    }
}